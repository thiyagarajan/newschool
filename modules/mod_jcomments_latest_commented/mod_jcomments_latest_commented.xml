	<config>
		<fields name="params">
			<fieldset name="basic" addfieldpath="/modules/mod_jcomments_latest_commented/fields">>
				<field
					name="source"
					type="jcommentsobjectgroup"
					default="com_content"
					multiple="true"
					size="10"
					label="MOD_JCOMMENTS_LATEST_COMMENTED_FIELD_SOURCE_LABEL"
					description="" />

				<field
					name="count"
					type="text"
					default="5"
					label="MOD_JCOMMENTS_LATEST_COMMENTED_FIELD_ITEMS_LABEL"
					description="MOD_JCOMMENTS_LATEST_COMMENTED_FIELD_ITEMS_DESC" />

				<field
					name="showCommentsCount"
					type="radio"
					default="1"
					label="MOD_JCOMMENTS_LATEST_COMMENTED_FIELD_COMMENTS_COUNT_LABEL"
					description="MOD_JCOMMENTS_LATEST_COMMENTED_FIELD_COMMENTS_COUNT_DESC">
					<option value="1">JSHOW</option>
					<option value="0">JHIDE</option>
				</field>
			</fieldset>

			<fieldset name="filtering" label="MOD_JCOMMENTS_LATEST_COMMENTED_FIELD_GROUP_FILTERING_LABEL">
				<field
					name="catid" 
					type="category"
					extension="com_content"
					multiple="true"
					default=""
					size="10"
					label="MOD_JCOMMENTS_LATEST_COMMENTED_FIELD_CATEGORY_LABEL"
					description="MOD_JCOMMENTS_LATEST_COMMENTED_FIELD_CATEGORY_DESC" >
					<option value="">MOD_JCOMMENTS_LATEST_COMMENTED_OPTION_ALL_CATEGORIES</option>
				</field>
			</fieldset>

			<fieldset name="advanced">
				<field
					name="useCSS"
					type="radio"
					default="1"
					label="MOD_JCOMMENTS_LATEST_COMMENTED_FIELD_CSS_LABEL"
					description="MOD_JCOMMENTS_LATEST_COMMENTED_FIELD_CSS_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />

				<field
					name="cachemode"
					type="hidden"
					default="itemid">
					<option value="itemid"></option>
				</field>
			</fieldset>
		</fields>
	</config>
